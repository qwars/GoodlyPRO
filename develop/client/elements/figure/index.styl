@import '../../css-ui-settings.styl';

.Figure
	margin: 0px
	padding: 0px
	display: grid
	grid-template-rows: 1fr auto 48px
	grid-template-columns: 1fr 24px
	background-size: 100%
	background-color: color-calm.background
	box-sizing: border-box
	width: 266px
	height: 172px
	border: 1px solid color-calm.background
	position: relative
	grid-gap: 12px
	transition: background-size .6s, background-position .6s
	label
		border: 0px solid transparent
	&:hover
		background-position: top right
		background-size: auto 100px
		transition: background-size .6s, background-position .6s
	aside
		cursor: pointer
		grid-area: 2/2/3/3
		width: 24px
		height: 32px
	pre
		padding: 12px;
		margin: 0px
		grid-area: 1/1/2/3
		place-self: stretch
	time
		grid-area: 2/1/3/2
		padding: 0 12px
		place-self: stretch
		align-items: center
		display: flex
	del
		cursor: pointer
		position: absolute
		right: 0
		top: 0
		color: color-calm.background
		background-color: white
		border: 1px solid color.background
		border-radius: 24px
		width: 1.5em
		height: 1.5em
		margin: -.7em
		display: flex
		align-items: center
		justify-content: center
	figcaption
		grid-area: 3/1/4/3
		display: flex
		align-items: center
		padding: 0 12px
		background-color: white